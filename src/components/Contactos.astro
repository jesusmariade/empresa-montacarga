<script>
  const canvas = document.getElementById('bg-canvas');
  const ctx = canvas.getContext('2d');

  let width, height, dots;
  const SPACING = 45;
  const YELLOW = '#F5A623';
  const BLUE = '#2a4a7f';

  function resize() {
    width = canvas.width = canvas.offsetWidth;
    height = canvas.height = canvas.offsetHeight;
    initDots();
  }

  function initDots() {
    dots = [];
    const cols = Math.ceil(width / SPACING) + 1;
    const rows = Math.ceil(height / SPACING) + 1;

    for (let r = 0; r < rows; r++) {
      for (let c = 0; c < cols; c++) {
        dots.push({
          x: c * SPACING,
          y: r * SPACING,
          phase: Math.random() * Math.PI * 2,   // fase inicial aleatoria
          speed: 0.4 + Math.random() * 0.6,     // velocidad del pulso
          baseRadius: 1.2,
          pulseRadius: 2.5 + Math.random() * 2, // tama√±o m√°ximo del pulso
          isYellow: Math.random() < 0.08,        // ~8% de puntos son amarillos
        });
      }
    }
  }

  function draw(t) {
    ctx.clearRect(0, 0, width, height);

    // Fondo
    ctx.fillStyle = '#0f1c33';
    ctx.fillRect(0, 0, width, height);

    dots.forEach(dot => {
      const pulse = (Math.sin(t * 0.001 * dot.speed + dot.phase) + 1) / 2; // 0 a 1
      const radius = dot.baseRadius + pulse * dot.pulseRadius;
      const alpha = 0.15 + pulse * 0.7;

      ctx.beginPath();
      ctx.arc(dot.x, dot.y, radius, 0, Math.PI * 2);

      if (dot.isYellow) {
        ctx.fillStyle = YELLOW;
        ctx.globalAlpha = alpha;
      } else {
        ctx.fillStyle = BLUE;
        ctx.globalAlpha = 0.1 + pulse * 0.35;
      }

      ctx.fill();
      ctx.globalAlpha = 1;
    });

    // Onda de pulso circular que viaja desde el centro ora que una ondaaa ooo que bonita
    const cx = width / 2;
    const cy = height / 2;
    const maxR = Math.sqrt(cx * cx + cy * cy);
    const waveR = ((t * 0.05) % maxR);
    const waveAlpha = Math.max(0, 0.12 - (waveR / maxR) * 0.12);

    ctx.beginPath();
    ctx.arc(cx, cy, waveR, 0, Math.PI * 2);
    ctx.strokeStyle = YELLOW;
    ctx.lineWidth = 1;
    ctx.globalAlpha = waveAlpha;
    ctx.stroke();
    ctx.globalAlpha = 1;

    requestAnimationFrame(draw);
  }

  window.addEventListener('resize', resize);
  resize();
  requestAnimationFrame(draw);
</script>